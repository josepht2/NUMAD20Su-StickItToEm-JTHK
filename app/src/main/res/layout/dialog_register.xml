<!-- https://developer.android.com/guide/topics/ui/dialogs -->
<!-- https://androidexamples.blogspot.com/2015/01/textview-font-size-in-android.html -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="4dp"
        android:text="@string/register_dialog_title"
        android:textSize="14pt" />

    <EditText
        android:id="@+id/register_dialog_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/register_dialog_username" />
</LinearLayout>
